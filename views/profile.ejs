<%- include('./partials/header') %>

<main class="flex-1 py-8 sm:py-12 bg-gray-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-20">
        <div class="flex flex-col sm:flex-row justify-between items-center mb-6 sm:mb-8 gap-4">
            <h2 class="text-2xl sm:text-3xl font-bold text-gray-800">My Account</h2>
            <a href="/shop" class="w-full sm:w-auto px-4 sm:px-6 py-2 sm:py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition text-center">Continue Shopping</a>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 sm:gap-6">
            <!-- Profile Information -->
            <div class="bg-white rounded-xl shadow-md p-4 sm:p-6">
                <h3 class="text-lg sm:text-xl font-semibold text-blue-600 mb-4">Personal Information</h3>
                <div class="space-y-3 text-sm sm:text-base">
                    <p class="flex justify-between">
                        <span class="text-gray-600">Name:</span>
                        <span class="font-medium truncate"><%= user.fullname %></span>
                    </p>
                    <p class="flex justify-between">
                        <span class="text-gray-600">Email:</span>
                        <span class="font-medium truncate"><%= user.email %></span>
                    </p>
                    <% if (user.contact) { %>
                        <p class="flex justify-between">
                            <span class="text-gray-600">Contact:</span>
                            <span class="font-medium"><%= user.contact %></span>
                        </p>
                    <% } %>
                </div>
                <button class="mt-4 sm:mt-6 px-4 py-2 bg-gray-200 rounded-lg hover:bg-gray-300 transition text-xs sm:text-sm">Edit Information</button>
            </div>
            <!-- Shopping Summary -->
            <div class="bg-white rounded-xl shadow-md p-4 sm:p-6">
                <h3 class="text-lg sm:text-xl font-semibold text-blue-600 mb-4">Shopping Summary</h3>
                <div class="space-y-3 text-sm sm:text-base">
                    <p class="flex justify-between">
                        <span class="text-gray-600">Items in Cart:</span>
                        <span class="font-medium"><%= user.cart ? user.cart.length : 0 %></span>
                    </p>
                    <p class="flex justify-between">
                        <span class="text-gray-600">Completed Orders:</span>
                        <span class="font-medium"><%= user.orders ? user.orders.length : 0 %></span>
                    </p>
                </div>
                <a href="/cart" class="mt-4 sm:mt-6 inline-block px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition text-xs sm:text-sm">View Cart</a>
            </div>
            <!-- Account Actions -->
            <div class="bg-white rounded-xl shadow-md p-4 sm:p-6">
                <h3 class="text-lg sm:text-xl font-semibold text-blue-600 mb-4">Account Actions</h3>
                <div class="space-y-3 sm:space-y-4 text-sm sm:text-base">
                    <a href="#" class="flex items-center text-gray-700 hover:text-blue-600 transition">
                        <i class="ri-lock-line mr-2"></i>
                        <span>Change Password</span>
                    </a>
                    <a href="#" class="flex items-center text-gray-700 hover:text-blue-600 transition">
                        <i class="ri-map-pin-line mr-2"></i>
                        <span>Manage Addresses</span>
                    </a>
                    <a href="#" class="flex items-center text-gray-700 hover:text-blue-600 transition">
                        <i class="ri-heart-line mr-2"></i>
                        <span>Wishlist</span>
                    </a>
                    <a href="/logout" class="flex items-center text-red-500 hover:text-red-600 transition">
                        <i class="ri-logout-box-line mr-2"></i>
                        <span>Logout</span>
                    </a>
                </div>
            </div>
        </div>
        <% if (user.orders && user.orders.length > 0) { %>
            <!-- Order History -->
            <div class="mt-8 sm:mt-12">
                <h3 class="text-xl sm:text-2xl font-bold text-gray-800 mb-4 sm:mb-6">Order History</h3>
                <div class="bg-white rounded-xl shadow-md overflow-x-auto">
                    <table class="w-full min-w-[640px]">
                        <thead class="bg-gray-100">
                            <tr>
                                <th class="py-3 sm:py-4 px-4 sm:px-6 text-left text-gray-600 text-sm sm:text-base">Order ID</th>
                                <th class="py-3 sm:py-4 px-4 sm:px-6 text-left text-gray-600 text-sm sm:text-base">Date</th>
                                <th class="py-3 sm:py-4 px-4 sm:px-6 text-left text-gray-600 text-sm sm:text-base">Items</th>
                                <th class="py-3 sm:py-4 px-4 sm:px-6 text-left text-gray-600 text-sm sm:text-base">Total</th>
                                <th class="py-3 sm:py-4 px-4 sm:px-6 text-left text-gray-600 text-sm sm:text-base">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% user.orders.forEach(order => { %>
                                <tr class="border-t border-gray-200 hover:bg-gray-50">
                                    <td class="py-3 sm:py-4 px-4 sm:px-6 text-sm sm:text-base">#<%= order.id %></td>
                                    <td class="py-3 sm:py-4 px-4 sm:px-6 text-sm sm:text-base"><%= order.date %></td>
                                    <td class="py-3 sm:py-4 px-4 sm:px-6 text-sm sm:text-base"><%= order.items.length %></td>
                                    <td class="py-3 sm:py-4 px-4 sm:px-6 text-sm sm:text-base">â‚¹ <%= order.total %></td>
                                    <td class="py-3 sm:py-4 px-4 sm:px-6">
                                        <span class="px-2 py-1 rounded-full text-xs sm:text-sm 
                                            <%= order.status === 'Delivered' ? 'bg-green-100 text-green-800' : 
                                               order.status === 'Processing' ? 'bg-blue-100 text-blue-800' : 
                                               'bg-yellow-100 text-yellow-800' %>">
                                            <%= order.status %>
                                        </span>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        <% } %>
    </div>
</main>

<%- include('./partials/footer') %>