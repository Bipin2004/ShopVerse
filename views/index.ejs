<%- include('./partials/header') %>

<% if(error.length > 0) { %>
    <div class="fixed top-5 left-1/2 transform -translate-x-1/2 p-4 rounded-lg bg-red-500 text-white shadow-lg z-50">
        <span><%= error %></span>
    </div>
<% } %>

<!-- Hero Section -->
<main class="flex-1 flex flex-col">
    <!-- Hero Banner -->
    <section class="w-full bg-gradient-to-r from-blue-600 via-blue-500 to-teal-500 text-white">
        <div class="container mx-auto py-16 md:py-24 px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-10 items-center">
                <div class="space-y-8">
                    <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight">
                        Discover Premium <span class="text-yellow-300">Products</span> for Every Need
                    </h1>
                    <p class="text-xl md:text-2xl text-gray-100 max-w-lg">
                        Shop the latest trends with confidence. Quality products, competitive prices, and exceptional service.
                    </p>
                    <div class="flex flex-wrap gap-4">
                        <a href="/shop" class="px-8 py-3 bg-white text-blue-600 font-semibold text-lg rounded-lg hover:bg-gray-100 transition shadow-lg">
                            Shop Now
                        </a>
                        <a href="/shop?category=discounted" class="px-8 py-3 bg-transparent border-2 border-white text-white font-semibold text-lg rounded-lg hover:bg-white hover:text-blue-600 transition">
                            View Deals
                        </a>
                    </div>
                </div>
                <div class="flex justify-center">
                    <div class="relative w-full max-w-md h-80 md:h-96 lg:h-[450px] overflow-hidden rounded-xl shadow-2xl">
                        <div class="absolute inset-0 bg-gradient-to-br from-transparent to-blue-900/60"></div>
                        <div class="absolute top-0 left-0 w-full h-full flex items-center justify-center">
                            <div class="grid grid-cols-2 gap-4 transform -rotate-12 scale-110">
                                <img src="/images/1bag.png" alt="Product" class="rounded-lg shadow-lg transform hover:scale-105 transition duration-300 w-full h-auto" />
                                <img src="/images/2bag.png" alt="Product" class="rounded-lg shadow-lg transform hover:scale-105 transition duration-300 w-full h-auto" />
                                <img src="/images/3bag 1.png" alt="Product" class="rounded-lg shadow-lg transform hover:scale-105 transition duration-300 w-full h-auto" />
                                <img src="/images/4bag.png" alt="Product" class="rounded-lg shadow-lg transform hover:scale-105 transition duration-300 w-full h-auto" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Featured Products Section -->
    <section class="bg-white py-16">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h2 class="text-3xl md:text-4xl font-bold text-gray-800">Featured Products</h2>
                <p class="mt-4 text-xl text-gray-600 max-w-2xl mx-auto">Discover our most popular items loved by customers</p>
            </div>
            
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
                <% for (let product of previewProducts) { %>
                <div class="bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition duration-300 border border-gray-200">
                    <div class="h-64 overflow-hidden">
                        <img src="data:image/jpeg;base64,<%= product.image %>" alt="<%= product.name %>" class="w-full h-full object-cover object-center hover:scale-110 transition duration-500">
                    </div>
                    <div class="p-6">
                        <h3 class="text-xl font-semibold text-gray-800"><%= product.name %></h3>
                        <div class="flex items-center mt-2">
                            <% if (product.discount > 0) { %>
                                <span class="text-lg font-bold text-gray-800">₹<%= product.price - product.discount %></span>
                                <span class="ml-2 text-sm text-gray-500 line-through">₹<%= product.price %></span>
                                <span class="ml-2 px-2 py-1 bg-red-100 text-red-700 text-xs font-medium rounded-full">
                                    <%= Math.round((product.discount / product.price) * 100) %>% OFF
                                </span>
                            <% } else { %>
                                <span class="text-lg font-bold text-gray-800">₹<%= product.price %></span>
                            <% } %>
                        </div>
                        <a href="/shop" class="mt-4 inline-block px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">View Details</a>
                    </div>
                </div>
                <% } %>
            </div>
            
            <div class="text-center mt-12">
                <a href="/shop" class="inline-flex items-center px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition">
                    View All Products
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                </a>
            </div>
        </div>
    </section>

    <!-- Why Choose Us Section -->
    <section class="bg-gray-100 py-16">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h2 class="text-3xl md:text-4xl font-bold text-gray-800">Why Choose ShopVerse</h2>
                <p class="mt-4 text-xl text-gray-600 max-w-2xl mx-auto">We're committed to providing the best shopping experience</p>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                <div class="bg-white p-6 rounded-xl shadow-md">
                    <div class="w-14 h-14 bg-blue-100 rounded-full flex items-center justify-center mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-800">Quality Products</h3>
                    <p class="mt-2 text-gray-600">Every item in our inventory is carefully selected for quality and durability.</p>
                </div>
                
                <div class="bg-white p-6 rounded-xl shadow-md">
                    <div class="w-14 h-14 bg-blue-100 rounded-full flex items-center justify-center mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-800">Best Prices</h3>
                    <p class="mt-2 text-gray-600">We offer competitive pricing and regular discounts to give you maximum value.</p>
                </div>
                
                <div class="bg-white p-6 rounded-xl shadow-md">
                    <div class="w-14 h-14 bg-blue-100 rounded-full flex items-center justify-center mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-800">Fast Delivery</h3>
                    <p class="mt-2 text-gray-600">Quick processing and shipping to get your orders to you when you need them.</p>
                </div>
                
                <div class="bg-white p-6 rounded-xl shadow-md">
                    <div class="w-14 h-14 bg-blue-100 rounded-full flex items-center justify-center mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.5 9.5v5M14.5 9.5v5" />
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-800">Customer Support</h3>
                    <p class="mt-2 text-gray-600">Our friendly team is always ready to help with any questions or concerns.</p>
                </div>
            </div>
        </div>
    </section>
</main>

<%- include('./partials/footer') %>