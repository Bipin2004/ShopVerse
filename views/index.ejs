<%- include('./partials/header') %>

<% if(error.length > 0) { %>
    <div class="fixed top-5 left-1/2 transform -translate-x-1/2 p-4 rounded-lg bg-red-500 text-white shadow-lg z-50">
        <span><%= error %></span>
    </div>
<% } %>

<main class="flex-1 flex items-center justify-center bg-gradient-to-r from-blue-100 to-teal-100 py-8 sm:py-12">
    <div class="container mx-auto px-4 sm:px-6 lg:px-20 flex flex-col lg:flex-row items-center gap-6 lg:gap-12">
        <!-- Register Section -->
        <div class="w-full lg:w-1/2 bg-white rounded-xl shadow-lg p-6 sm:p-8">
            <h3 class="text-2xl sm:text-3xl font-bold text-gray-800 mb-2">Welcome to <span class="text-blue-600">Scatch</span></h3>
            <h4 class="text-lg sm:text-xl text-gray-600 mb-4 sm:mb-6">Create Your Account</h4>
            <form autocomplete="off" action="/users/register" method="post" class="space-y-4">
                <div>
                    <input
                        class="w-full px-4 py-3 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-gray-50 text-sm sm:text-base"
                        type="text" placeholder="Full Name" name="fullname" required>
                </div>
                <div>
                    <input
                        class="w-full px-4 py-3 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-gray-50 text-sm sm:text-base"
                        type="email" placeholder="Email" name="email" required>
                </div>
                <div>
                    <input
                        class="w-full px-4 py-3 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-gray-50 text-sm sm:text-base"
                        type="password" placeholder="Password" name="password" required>
                </div>
                <button
                    class="w-full py-2 sm:py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition font-semibold text-sm sm:text-base"
                    type="submit">Create My Account</button>
            </form>
        </div>
        <!-- Separator -->
        <div class="flex items-center justify-center w-full lg:w-auto">
            <div class="hidden lg:flex items-center gap-4 w-full">
                <div class="flex-1 h-px bg-teal-300"></div>
                <span class="text-teal-600 font-semibold text-lg uppercase">OR</span>
                <div class="flex-1 h-px bg-teal-300"></div>
            </div>
            <span class="block lg:hidden text-teal-600 font-semibold text-lg uppercase bg-white px-4 py-1 rounded-full">OR</span>
        </div>
        <!-- Login Section -->
        <div class="w-full lg:w-1/2 bg-white rounded-xl shadow-lg p-6 sm:p-8">
            <h4 class="text-lg sm:text-xl text-gray-600 mb-4 sm:mb-6">Login to Your Account</h4>
            <form autocomplete="off" action="/users/login" method="post" class="space-y-4">
                <div>
                    <input
                        class="w-full px-4 py-3 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-gray-50 text-sm sm:text-base"
                        type="email" placeholder="Email" name="email" required>
                </div>
                <div>
                    <input
                        class="w-full px-4 py-3 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-gray-50 text-sm sm:text-base"
                        type="password" placeholder="Password" name="password" required>
                </div>
                <button
                    class="w-full py-2 sm:py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition font-semibold text-sm sm:text-base"
                    type="submit">Login</button>
            </form>
        </div>
    </div>
</main>

<%- include('./partials/footer') %>