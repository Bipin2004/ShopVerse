<%- include('./partials/header') %>

<% if(success.length > 0) { %>
    <div class="fixed top-20 left-1/2 transform -translate-x-1/2 p-4 rounded-lg bg-green-500 text-white shadow-lg z-50 flash-message">
        <span><%= success %></span>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(function() {
                const flashMessage = document.querySelector('.flash-message');
                if (flashMessage) {
                    flashMessage.style.transition = 'opacity 0.5s';
                    flashMessage.style.opacity = '0';
                    setTimeout(function() {
                        flashMessage.remove();
                    }, 500);
                }
            }, 4000);
        });
    </script>
<% } %>

<main class="flex-1 py-8 sm:py-12 bg-gray-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-20">
        <h2 class="text-xl sm:text-2xl font-bold tracking-tight text-gray-800 mb-6 sm:mb-8">Create New Product</h2>
        <div class="bg-white rounded-xl shadow-md p-6 sm:p-8">
            <form action="/products/create" method="post" enctype="multipart/form-data">
                <div class="mb-4 sm:mb-6">
                    <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
                    <input type="text" name="name" id="name" class="mt-1 w-full border rounded-lg px-3 py-2 bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out" required>
                </div>
                <div class="mb-4 sm:mb-6">
                    <label for="price" class="block text-sm font-medium text-gray-700">Price</label>
                    <input type="number" name="price" id="price" class="mt-1 w-full border rounded-lg px-3 py-2 bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out" required>
                </div>
                <div class="mb-4 sm:mb-6">
                    <label for="discount" class="block text-sm font-medium text-gray-700">Discount (%)</label>
                    <input type="number" name="discount" id="discount" class="mt-1 w-full border rounded-lg px-3 py-2 bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out" required>
                </div>
                <div class="mb-4 sm:mb-6">
                    <label for="image" class="block text-sm font-medium text-gray-700">Image (optional)</label>
                    <input type="file" name="image" id="image" class="mt-1 w-full border rounded-lg px-3 py-2 bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out" accept="image/*">
                </div>
                <div class="mb-4 sm:mb-6">
                    <label for="bgcolor" class="block text-sm font-medium text-gray-700">Background Color</label>
                    <input type="text" name="bgcolor" id="bgcolor" class="mt-1 w-full border rounded-lg px-3 py-2 bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out" placeholder="#ffffff">
                </div>
                <div class="mb-4 sm:mb-6">
                    <label for="panelcolor" class="block text-sm font-medium text-gray-700">Panel Color</label>
                    <input type="text" name="panelcolor" id="panelcolor" class="mt-1 w-full border rounded-lg px-3 py-2 bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out" placeholder="#ffffff">
                </div>
                <div class="mb-4 sm:mb-6">
                    <label for="textcolor" class="block text-sm font-medium text-gray-700">Text Color</label>
                    <input type="text" name="textcolor" id="textcolor" class="mt-1 w-full border rounded-lg px-3 py-2 bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out" placeholder="#000000">
                </div>
                <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out">
                    Create Product
                </button>
            </form>
            <div class="mt-6 text-center">
                <a href="/admin" class="text-blue-600 hover:text-blue-800 font-semibold transition duration-150 ease-in-out">Manage Products</a>
            </div>
        </div>
    </div>
</main>

<%- include('./partials/footer') %>