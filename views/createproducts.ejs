<%- include('./partials/header') %>

<% if(success.length > 0) { %>
    <div class="fixed top-20 left-1/2 transform -translate-x-1/2 p-4 rounded-lg bg-green-500 text-white shadow-lg z-50 flash-message">
        <span><%= success %></span>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(function() {
                const flashMessage = document.querySelector('.flash-message');
                if (flashMessage) {
                    flashMessage.style.transition = 'opacity 0.5s';
                    flashMessage.style.opacity = '0';
                    setTimeout(function() {
                        flashMessage.remove();
                    }, 500);
                }
            }, 4000);
        });
    </script>
<% } %>

<main class="flex-1 py-12 bg-gray-50">
    <div class="container mx-auto px-6 lg:px-20 flex flex-col lg:flex-row gap-8">
        <!-- Sidebar -->
        <div class="w-full lg:w-1/4 bg-white rounded-xl shadow-md p-6">
            <h3 class="text-lg font-semibold text-gray-800 mb-4">Admin Menu</h3>
            <div class="flex flex-col gap-2">
                <a href="/admin" class="text-gray-700 hover:text-blue-600 transition">All Products</a>
                <a href="/owners/admin" class="text-gray-700 hover:text-blue-600 transition">Create New Product</a>
            </div>
        </div>
        <!-- Form -->
        <div class="w-full lg:w-3/4">
            <div class="bg-white rounded-xl shadow-md p-8 pb-16">
                <h2 class="text-2xl font-bold text-gray-800 mb-6">Create New Product</h2>
                <form autocomplete="off" action="/products/create" method="post" enctype="multipart/form-data" class="space-y-6" id="create-product-form">
                    <div>
                        <h3 class="text-lg font-semibold text-gray-800 mb-3">Product Details</h3>
                        <div class="space-y-4">
                            <div class="relative">
                                <label class="block text-sm font-medium text-gray-600 mb-1">Product Image</label>
                                <div class="flex items-center">
                                    <label class="cursor-pointer px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
                                        Choose File
                                        <input name="image" type="file" class="hidden" required>
                                    </label>
                                    <span id="file-name" class="ml-3 text-gray-600">No file chosen</span>
                                </div>
                            </div>
                            <div class="space-y-4">
                                <div>
                                    <label class="block text-sm font-medium text-gray-600 mb-1">Product Name</label>
                                    <input name="name" type="text" placeholder="Product Name" class="w-full px-4 py-3 border rounded-lg bg-gray-50 focus:ring-2 focus:ring-blue-500" required>
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-600 mb-1">Product Price</label>
                                    <input name="price" type="number" placeholder="Product Price" class="w-full px-4 py-3 border rounded-lg bg-gray-50 focus:ring-2 focus:ring-blue-500" required min="0">
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-600 mb-1">Discount (%)</label>
                                    <input name="discount" type="number" placeholder="Discount" class="w-full px-4 py-3 border rounded-lg bg-gray-50 focus:ring-2 focus:ring-blue-500" value="0" min="0" max="100">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div>
                        <h3 class="text-lg font-semibold text-gray-800 mb-3">Panel Details</h3>
                        <div class="space-y-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-600 mb-1">Background Color</label>
                                <input name="bgcolor" type="text" placeholder="Background Color (e.g., #ffffff)" class="w-full px-4 py-3 border rounded-lg bg-gray-50 focus:ring-2 focus:ring-blue-500">
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-600 mb-1">Panel Color</label>
                                <input name="panelcolor" type="text" placeholder="Panel Color (e.g., #f0f0f0)" class="w-full px-4 py-3 border rounded-lg bg-gray-50 focus:ring-2 focus:ring-blue-500">
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-600 mb-1">Text Color</label>
                                <input name="textcolor" type="text" placeholder="Text Color (e.g., #000000)" class="w-full px-4 py-3 border rounded-lg bg-gray-50 focus:ring-2 focus:ring-blue-500">
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="w-full py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition font-semibold">Create New Product</button>
                </form>
            </div>
        </div>
    </div>
</main>

<%- include('./partials/footer') %>